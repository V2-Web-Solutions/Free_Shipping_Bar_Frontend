{{ 'announcement-bar.css' | asset_url | stylesheet_tag }}

<div class="free-shipping-bar">
  <p class="free-shipping-text">{{ block.settings.announcement_text }}</p>
</div>

 <script src="{{ 'announcement-bar.js' | asset_url }}" async></script> 

 <script>
  var myApp = {
    shopName: '{{ shop.url }}',
  };
</script> 

{% schema %}
{
  "name": "Announcement Bar",
  "target": "section",
  // "section": "announcement-bar",
  "settings": [
    {
      "label" : "Announment Text",
      "id": "announcement_text",
      "type": "text",
      "default": "Free shipping on all orders over $50!"
    }
  ]
}
{% endschema %}